<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/startScreenLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="chdah.umu.thirthy_game_cd.controller.StartActivity">

    <Button
        android:id="@+id/start_game_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/string_error"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/ending_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/thirty_game"
        android:textSize="40sp"/>

    <ListView
        android:id="@+id/scoreChoicesListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ending_score_tv"
        android:layout_above="@id/start_game_b"
        />

</RelativeLayout>
